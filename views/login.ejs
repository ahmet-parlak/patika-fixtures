<!-- header -->
<%- include('partials/_header') %>

<!-- navigation -->
<%- include('partials/_navigation') %>

<!-- login section start -->
<div class="contact_section layout_padding">
  <div class="container">
    <div class="contact_section_2 w-100">
      <div class="row">
        <div class="col-md-6">
          <h1 class="contact_taital contact_heading">Login</h1>
          <form action="/auth/login" method="POST">
            <input type="text" class="mail_text" placeholder="Email" name="email">
            <input type="password" class="mail_text" placeholder="Password" name="password">
            <input id="login_submit" hidden type="submit" value="login">
            <div class="btn_main">
              <div class="send_bt"><a class="text-light" onclick="login()" style="cursor: pointer;">Login</a></div>
            </div>
          </form>
        </div>
        <div class="col-md-6 border-left">
          <h1 class="contact_taital contact_heading">Register</h1>
          <form action="/auth/register" method="POST">
            <input type="text" class="mail_text" placeholder="Name" name="Name">
            <input type="text" class="mail_text" placeholder="Email" name="Email">
            <input type="password" class="mail_text" placeholder="Password" name="password">
            <input id="register_submit" hidden type="submit" value="register">
            <div class="btn_main">
              <div class="send_bt"><a class="text-light" id="register_btn" onclick="register()" style="cursor: pointer;">Register</a></div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- login section end -->
<!-- footer -->
<%- include('partials/_footer') %>

<script>
  function login(e) {
    document.getElementById("login_submit").click()
  }

  function register(e) {
    document.getElementById("register_submit").click()
  }
</script>